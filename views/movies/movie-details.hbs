<h2>{{ movie.title }} Details</h2>
<p>Genre: {{ movie.genre }}</p>
<p>Plot: {{ movie.plot }}</p>

<h3>Cast:</h3>
<ul>
  {{#each movie.cast}}
    <li>
      <h4>{{this.name}} </h4>
        <p>{{this.occupation}}</p>
        <p>{{this.catchPhrase}}</p>    
    </li>
  {{/each}}
</ul>
<form action="/movies/{{ movie._id }}/delete" method="POST">
    <button type="submit">Delete Movie</button>
</form> |
<a href="/movies/{{movie._id}}/edit">Edit</a> 



